---
import { Picture } from "astro:assets";
import Date from "./Date.astro";

const { post } = Astro.props;
const { title, pubDate, summary, coverImage, coverAlt } = post.data;
---

<article>
  <a href={`/blog/${post.slug}/`}>
    <Picture
      src={coverImage}
      alt={coverAlt}
      widths={[400, 600]}
      sizes={`(max-width: 600px) 400px, (min-width: 601px) 600px`}
      class="shadow w-full bg-[#d1d5db] aspect-video rounded mb-6"
    />
  </a>

  <Date date={pubDate} />

  <h2 class="text-xl lg:text-2xl font-semibold mt-2">
    <a href={`/blog/${post.slug}/`}>{title}</a>
  </h2>

  <div class="mt-6">
    {summary}
  </div>
</article>
